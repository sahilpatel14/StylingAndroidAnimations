<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ninthsemester.stylingandroidanimations.MainActivity">

    <!--
        todo 5
        Finally we use this custom view and use app: namespace
        to use user defined properties.
    -->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:clipToPadding="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.ninthsemester.stylingandroidanimations.BenefitView
                app:caption="Apply and chat with our hosts"
                app:image="@drawable/ic_launcher_foreground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                />

            <com.ninthsemester.stylingandroidanimations.BenefitView
                app:caption="Apply and chat with our hosts"
                app:image="@drawable/ic_launcher_foreground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                />

            <com.ninthsemester.stylingandroidanimations.BenefitView
                app:caption="Apply and chat with our hosts"
                app:image="@drawable/ic_launcher_foreground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                />

        </LinearLayout>

    </HorizontalScrollView>

</android.support.constraint.ConstraintLayout>
